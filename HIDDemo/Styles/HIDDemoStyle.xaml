<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:HIDDemo.Styles">
    <SolidColorBrush x:Key="DefaultBackgroundColor" Color="Black"/>

    <DataTemplate x:Key="HIDOPButton">
        <Button/>
    </DataTemplate>
    <ItemsPanelTemplate x:Key="HIDOPItemsPanel">
        <StackPanel/>
    </ItemsPanelTemplate>
    <ControlTemplate x:Key="HIDOpreationTemplate" TargetType="ContentControl">
        <ItemsControl ItemsSource="{Binding HIDOPButtons}" 
                      ItemTemplate="{StaticResource HIDOPButton}"
                      ItemsPanel="{StaticResource HIDOPItemsPanel}"/>
    </ControlTemplate>
</ResourceDictionary>