<UserControl x:Class="WPFMVVM.Views.CustomSliderControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFMVVM.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <DockPanel>
            <ContentControl DockPanel.Dock="Top" Template="{StaticResource CustomTitleTip}"/>
            <ContentControl DockPanel.Dock="Bottom" Template="{StaticResource CustomRLButton}"/>
            <Slider Style="{StaticResource SliderMSDNStyle}"/>
        </DockPanel>
    </Grid>
</UserControl>
