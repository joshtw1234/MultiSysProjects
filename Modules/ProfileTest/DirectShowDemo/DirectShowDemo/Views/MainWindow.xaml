<Window x:Class="DirectShowDemo.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DirectShowDemo.Views"
        xmlns:m="clr-namespace:DirectShowDemo.ViewModels"
        m:ViewModelLocator.AutoHookedUpViewModel ="true"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="{x:Null}">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!--<ResourceDictionary Source="/Styles/HIDDemoStyle.xaml"/>-->
                <ResourceDictionary Source="pack://application:,,,/DirectShowDemo;component/Styles/DirectShowDemoStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <DockPanel>
            <ItemsControl DockPanel.Dock="Bottom" ItemsSource="{Binding CommonButtons}"
                      ItemTemplate="{StaticResource ButtonTemplate}"
                      ItemsPanel="{StaticResource ButtonPanelTemplate}"/>
            <ScrollViewer>
                <TextBlock DataContext="{Binding DisplayMenuItem}" Style="{Binding MenuStyle}"/>
            </ScrollViewer>
        </DockPanel>
    </Grid>
</Window>
