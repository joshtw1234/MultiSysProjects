<UserControl x:Class="MVVMUtilities.Views.ViewDebug"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MVVMUtilities.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!--<ResourceDictionary Source="/Styles/HIDDemoStyle.xaml"/>-->
                <ResourceDictionary Source="pack://application:,,,/MVVMUtilities;component/Styles/CommonStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <DockPanel>
            <ItemsControl DockPanel.Dock="Bottom" ItemsSource="{Binding CommonButtons}"
                      ItemTemplate="{StaticResource ButtonTemplate}"
                      ItemsPanel="{StaticResource ButtonPanelTemplate}"/>
            <ScrollViewer>
                <TextBlock DataContext="{Binding DisplayMenuItem}" Style="{Binding MenuStyle}"/>
            </ScrollViewer>
        </DockPanel>
    </Grid>
</UserControl>
