<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:CommonUILib.Styles">

    <DataTemplate x:Key="MenuButtonTemplate">
        <ToggleButton Style="{Binding MenuStyle}"/>
    </DataTemplate>

    <ItemsPanelTemplate x:Key="MenuButtonPanel">
        <StackPanel/>
    </ItemsPanelTemplate>

    <ItemsPanelTemplate x:Key="ButtonPanelTemplate">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right"/>
    </ItemsPanelTemplate>

    <DataTemplate x:Key="EQBandTemplate">
        <ContentControl Style="{StaticResource VerticalBandStyle}"/>
    </DataTemplate>
    <DataTemplate x:Key="HBandTemplate">
        <ContentControl Style="{StaticResource HorizeBandStyle}"/>
    </DataTemplate>
    <DataTemplate x:Key="EQBandsTemplate">
        <RadioButton Style="{Binding MenuStyle}"/>
    </DataTemplate>
</ResourceDictionary>